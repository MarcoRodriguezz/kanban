{
  "name": "back",
  "version": "1.0.0",
  "description": "Backend del proyecto Kanban",
  "main": "index.js",
  "scripts": {
    "setup": "npm install && npm run prisma:generate && npm run prisma:migrate && npm run prisma:seed",
    "dev": "nodemon --exec ts-node index.ts",
    "build": "tsc",
    "build:dev": "tsc",
    "build:frontend": "cd ../front && npm install && npm run build",
    "build:all": "npm run build && npm run build:frontend",
    "clean": "powershell -Command \"if (Test-Path dist) { Remove-Item -Recurse -Force dist }\"",
    "start": "node dist/index.js",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "prisma:generate": "prisma generate --config prisma/prisma.config.ts",
    "prisma:migrate": "prisma migrate dev --config prisma/prisma.config.ts",
    "prisma:studio": "prisma studio --config prisma/prisma.config.ts",
    "prisma:seed": "ts-node prisma/seed.ts"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/adapter-mariadb": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.3",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.15.3",
    "nodemailer": "^7.0.10",
    "prisma": "^7.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mariatroncososiweb/kanban_back.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/mariatroncososiweb/kanban_back/issues"
  },
  "homepage": "https://github.com/mariatroncososiweb/kanban_back#readme"
}
